    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/api/main.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "INFO": "Test info string",
                "PYTHONPATH": "${workspaceFolder}:${env:PYTHONPATH}",
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "INFO": "Test info string",
                "PYTHONPATH": "${workspaceFolder}:${env:PYTHONPATH}",
            }
        }
    ]
}